<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="create-table-city_112" author="Arman">
        <createTable tableName="city12">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="point" type="point"/>
        </createTable>
    </changeSet>

    <changeSet id="create-table-city_21" author="Arman">
        <createTable tableName="city">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="latitude" type="double"/>
            <column name="longitude" type="double"/>
        </createTable>
    </changeSet>


    <changeSet id="create-table-distance16" author="Arman">
        <createTable tableName="distance">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="from_city" type="BIGINT">
                <constraints foreignKeyName="distance_from_city_city1_id" references="city(id)"/>
            </column>
            <column name="to_city" type="BIGINT">
                <constraints foreignKeyName="distance_to_city_city1_id" references="city(id)"/>
            </column>
            <column name="distance" type="double"/>
        </createTable>
    </changeSet>


